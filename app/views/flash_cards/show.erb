<div class="cards_wrapper">
  <h1>A Flash Card!</h1>
  <div class="card">
    <div class="content">
      <div class="front">
        <p>English: <%=@flash_card.english%></p>
      </div>
      <div class="back">
        <p>Translation: <%=@flash_card.translation%></p>
      </div>
    </div>
  </div>
  <%if @next_flash_card%>
    <a href="/flash_cards/<%=@next_flash_card.id%>">Next</a>
  <%else%>
    <h3>That's it! Create more flash cards <a href="/flash_cards/new">here!</a></h3>
  <%end%>
  <p><a href="/flash_cards/<%=@flash_card.id%>/edit"><button>Edit</button></a></p>
  <form action="/flash_cards/<%=@flash_card.id%>" method="post"></form>
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit">Delete</button>
</form>
</div>
